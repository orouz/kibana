{
  "extends": "../../tsconfig.bazel.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./target_types",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "translations/en.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/intl_format_cache.d.ts",
    "types/intl_relativeformat.d.ts"
  ],
  "exclude": ["**/__fixtures__/**/*"]
}
